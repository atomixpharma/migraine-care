datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  phone        String?
  password     String
  dob          String?
  address      String?
  city         String?
  province     String?
  postalCode   String?
  ohipCard     String?        // for uploaded OHIP image path
  insurance1   String?        // front of first insurance card
  insurance1Back String?      // back of first insurance card
  insurance2   String?        // front of second insurance card (optional)
  insurance2Back String?      // back of second insurance card (optional)
  intakeForms  IntakeForm[]
}



model IntakeForm {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  fullName   String
  insurance  String
  symptoms   String
  duration   String
  severity   String
}

